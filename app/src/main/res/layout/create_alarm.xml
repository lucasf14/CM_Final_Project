<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="16dp">

    <EditText
        android:id="@+id/textAlarmName"
        android:layout_width="363dp"
        android:layout_height="75dp"
        android:gravity="top|left"
        android:text="Select Alarm Name"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <Button
        android:id="@+id/buttonHours"
        android:layout_width="160dp"
        android:layout_height="159dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAlarmName"
        app:layout_constraintVertical_bias="0.078" />

    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.197"
        tools:layout_editor_absoluteX="0dp">

        <ToggleButton
            android:id="@+id/toggleMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Monday"
            android:textOn="Monday"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="200p" />

        <ToggleButton
            android:id="@+id/toggleTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Tuesday"
            android:textOn="Tuesday"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="200p" />

        <ToggleButton
            android:id="@+id/toggleWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Wednesday"
            android:textOn="Wednesday"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="200p" />

        <ToggleButton
            android:id="@+id/toggleThursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Thursday"
            android:textOn="Thursday"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="483dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer"
        app:layout_constraintVertical_bias="0.137"
        tools:layout_editor_absoluteX="0dp">

        <ToggleButton
            android:id="@+id/toggleFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Friday"
            android:textOn="Friday"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="483dp" />

        <ToggleButton
            android:id="@+id/toggleSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Saturday"
            android:textOn="Saturday"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="483dp" />

        <ToggleButton
            android:id="@+id/toggleSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ToggleButton"
            android:textOff="Sunday"
            android:textOn="Sunday"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="483dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="Select Repeat Days"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHours"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonCreateAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Alarm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonContainer2" />


</androidx.constraintlayout.widget.ConstraintLayout>